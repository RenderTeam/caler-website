extends layout

block custom-scripts  
  script(src='javascripts/own/calendar.js')
block custom-stylesheets
  link(href='/stylesheets/own/shame.css', rel='stylesheet')
  link(href='/stylesheets/own/calendar.css', rel='stylesheet')
  link(href='/stylesheets/own/customCalendar.css', rel='stylesheet')

block content
    
  .container.text-center
    .span11.service-titles
      .span4
        hr
      .span3
        h3
          img(src='/images/iconoCaler.png', alt="Logo",height="35", width="35").pull-left
          span Capacitaciones
          img(src='/images/iconoCaler.png', alt="Logo",height="35", width="35").pull-right
      .span4
        hr

    .span11.columns-container.clearfix
      .span4.calendarWrapper.pull-right.hidden-phone
        include calendar
      
      - var month = {value: 'febrero'};   
      - var courses = [{month: month.value,date:'12 y 13',description:'Elaboración de manuales y documentos de sistemas de gestión de la calidad (normas ISO 19001, ISO 15189, ISO 17025',name: 'Elaboración de manuales y documentos de sistemas de gestión de la calidad (normas ISO 19001, ISO 15189, ISO 17025',summary:'#'}, {month: month.value,date:'14 y 15',description:'Estimación de la incertidumbre de la medición en ensayos orientado a métodos analíticos',name: 'Estimación de la incertidumbre de la medición en ensayos orientado a métodos analíticos',summary:'#'}, {month: month.value,date:'18 y 19',description:'Formación de auditores internos, bajo la norma ISO 19011:2011 con enfoque en las normas ISO 17189:2012 e ISO/IEC 17025:2005',name: 'Formación de auditores internos, bajo la norma ISO 19011:2011 con enfoque en las normas ISO 17189:2012 e ISO/IEC 17025:2005',summary:'#'}, {month: month.value,date:'20',description:'Taller de interpretación de políticas de EMA (Incertidumbre, trazabilidad y ensayos de aptitud',name: 'Taller de interpretación de políticas de EMA (Incertidumbre, trazabilidad y ensayos de aptitud',summary:'#'},{month: month.value,date:'26 y 27',description:'Actualización e implementación de la ISO 15189, los retos de la versión 2012',name: 'Actualización e implementación de la ISO 15189, los retos de la versión 2012',summary:'#'}, {month: month.value,date:'28',description:'Documentación de trazabilidad en las mediciones clínicas',name: 'Documentación de trazabilidad en las mediciones clínicas',summary:'#'}];
      
      each course in courses
        include course-card